<Window
  x:Class="WPFApp.CreateProductWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:WPFApp"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Add Product - My Store DB"
  Width="500"
  Height="520"
  MinWidth="400"
  MinHeight="520"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="16">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="16" />
          <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock
          Grid.Column="0"
          FontSize="38"
          Text="✚" />

        <StackPanel Grid.Column="2">
          <TextBlock Text="My Store DB" />
          <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Text="Add new product" />
        </StackPanel>
      </Grid>

      <Rectangle Height="18" />
      <Label>Product name</Label>
      <TextBox Name="NameText" TextChanged="Name_TextChanged" />

      <Rectangle Height="8" />
      <Label>Category</Label>
      <ComboBox
        Name="CategoryComboList"
        Padding="12"
        SelectionChanged="CategoryComboList_SelectionChanged"
        Text="Select a category" />

      <!--  TextBlock x:Name="StatusBlock" /  -->

      <Rectangle Height="8" />
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="0.6*" />
          <ColumnDefinition Width="16" />
          <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
          <Label>Unit in stock</Label>
          <TextBox Name="UiSText" TextChanged="UiS_TextChanged" />
        </StackPanel>
        <StackPanel Grid.Column="2">
          <Label>Price ($)</Label>
          <TextBox Name="PriceText" TextChanged="Price_TextChanged" />
        </StackPanel>
      </Grid>
    </StackPanel>

    <StackPanel Grid.Row="1" Margin="16">
      <Button
        x:Name="AddButton"
        Padding="0,8"
        Click="AddButton_Click"
        IsEnabled="False">
        Add product
      </Button>
      <Rectangle Height="8" />
      <Button
        Padding="0,8"
        Background="#eee"
        Foreground="#000">
        Clear input
      </Button>
    </StackPanel>
  </Grid>
</Window>
