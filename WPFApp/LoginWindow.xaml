<Window x:Class="WPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="Login - My Store DB" Height="450" Width="500">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="40"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
      <TextBlock Text="Login" FontSize="34" TextAlignment="Center" FontWeight="Bold"/>
      <TextBlock Text="My Store Database" FontSize="16" TextAlignment="Center"/>
    </StackPanel>

    <!--StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
    </StackPanel-->

    <StackPanel Grid.Row="3" Margin="32, 0" MaxWidth="400" >
      <Label Content="Username" />
      <TextBox x:Name="UsernameInput" />
      <Label Content="Password"/>
      <PasswordBox  x:Name="PasswordInput"/>

      <Button Margin="0, 28, 0, 0" Click="Login_Click">
        Login
      </Button>
    </StackPanel>
  </Grid>
</Window>
