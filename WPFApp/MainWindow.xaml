<Window
  x:Class="WPFApp.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:WPFApp"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="My Store Database"
  Width="800"
  Height="500"
  MinWidth="600"
  MinHeight="500"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Grid
      Grid.Row="0"
      MaxWidth="560"
      Margin="0,64">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="24" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0">
        <Image
          Width="84"
          Height="84"
          Source="/Assets/icon.png" />
      </StackPanel>

      <StackPanel Grid.Column="2" VerticalAlignment="Center">
        <TextBlock
          FontSize="40"
          FontWeight="Bold"
          Text="My Store Database" />
        <TextBlock FontSize="16" Text="DB Management Tools" />
      </StackPanel>
    </Grid>

    <StackPanel
      x:Name="LoadingStatus"
      Grid.Row="1"
      HorizontalAlignment="Center"
      VerticalAlignment="Top">
      <Border
        Width="Auto"
        Margin="16"
        Padding="1"
        BorderBrush="#000"
        BorderThickness="1">
        <TextBlock
          x:Name="LoadingFrame"
          FontSize="20"
          Foreground="#5252f0"
          TextAlignment="Center" />
      </Border>
    </StackPanel>

    <StackPanel Grid.Row="2" HorizontalAlignment="Center">
      <TextBlock
        x:Name="LoadingText"
        Text="Loading application"
        TextAlignment="Center" />
      <StackPanel
        x:Name="ButtonsControl"
        Margin="0,16,0,0"
        Orientation="Horizontal">
        <Button Width="160" Click="LoginButton_Click">Login</Button>
        <TextBlock
          Width="60"
          Padding="8"
          VerticalAlignment="Center"
          Text="Or"
          TextAlignment="Center" />
        <Button
          Background="#f0f0f0"
          Click="CloseButton_Click"
          Foreground="#000">
          Exit application
        </Button>
      </StackPanel>
    </StackPanel>

    <StackPanel
      Grid.Row="3"
      Margin="0,16,0,16"
      HorizontalAlignment="Center"
      Orientation="Horizontal">
      <TextBlock VerticalAlignment="Center" Text="Made for: LAB 2 - PRN212 | By Group 2 " />
      <Button
        Padding="12,4"
        VerticalAlignment="Center"
        Background="#e0e0e0"
        FontSize="10"
        Click="MemberClick"
        Foreground="#000">
        View member
      </Button>
    </StackPanel>
  </Grid>
</Window>
