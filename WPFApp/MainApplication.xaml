<Window x:Class="WPFApp.MainApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="Products - My Store DB" Height="650" Width="970">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="1*" />
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0"  Background="#2c4d8a">
      <Grid Height="Auto" Margin="8, 8, 8, 16">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0, 8, 0, 0">
          <TextBlock Text="[My Store DB] Product Manager" FontWeight="Bold" Foreground="#fff" FontSize="24"/>
          <TextBlock Text="{Binding ProdStat}" Foreground="#fff"/>
        </StackPanel>
      </Grid>

      <Grid Margin="8">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="8" />
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox FontSize="13"  Grid.Column="0"
                 TextChanged="SQuery_TextChanged" 
                 GotFocus="SQueryBox_GotFocus"
                 LostFocus="SQueryBox_LostFocus"
                 x:Name="SQueryBox"
                 BorderThickness="0" 
                 Padding="8" 
                 Text="Search for products . . ."/>

        <StackPanel Grid.Column="2" VerticalAlignment="Center">
          <Button Padding="10" Click="RndBtt_Click">Random</Button>
        </StackPanel>
      </Grid>
    </StackPanel>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>

      <DataGrid Grid.Column="1" x:Name="ProdDataGrid" 
                SelectionChanged="ProdDataGrid_SelectionChanged"
                IsReadOnly="True" 
                AutoGeneratingColumn="DataGrid_OnAutoGeneratingColumn">
        <DataGrid.CellStyle>
          <Style TargetType="DataGridCell">
            <Setter Property="Template">
              <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                  <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                  </Border>
                </ControlTemplate>
              </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="8, 6, 18, 6"/>
            <Setter Property="FontFamily" Value="JetBrains Mono NL"/>
            <Setter Property="FontSize" Value="13"/>
          </Style>
        </DataGrid.CellStyle>
      </DataGrid>

      <Border Grid.Column="0" BorderThickness="0, 0.5" BorderBrush="#000" x:Name="Sidebar">
        <StackPanel Margin="16" x:Name="ProductDetails">
          <StackPanel Margin="0, 0, 0, 8">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <StackPanel Grid.Column="0">
                <TextBlock Text="Product details" FontSize="20" FontWeight="Bold" />
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Product ID: " />
                  <TextBlock Text="{Binding ProductId}" />
                </StackPanel>
              </StackPanel>
              <Button Grid.Column="1" Click="CloseSide_Click">✖</Button>
            </Grid>
          </StackPanel>

          <Rectangle Height="16"/>
          <TextBlock Text="Product Name" />
          <TextBox Padding="8, 4" Text="{Binding ProductName}" />

          <Rectangle Height="16"/>
          <TextBlock Text="Category"/>
          <ComboBox Padding="12" Text="Category" x:Name="CategoryComboList" SelectionChanged="CategoryComboList_SelectionChanged" />

          <Rectangle Height="16"/>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="0.6*" />
              <ColumnDefinition Width="16" />
              <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
              <Rectangle Height="16"/>
              <TextBlock Text="Unit in stock"/>
              <TextBox Padding="8, 4" Text="{Binding UnitsInStock}" />
            </StackPanel>

            <StackPanel Grid.Column="2">
              <Rectangle Height="16"/>
              <TextBlock Text="Price ($)"/>
              <TextBox Padding="8, 4" Text="{Binding UnitPrice}" />
            </StackPanel>
          </Grid>

          <Rectangle Height="38"/>
          <Button Click="Update_Click">Update info</Button>
          <Rectangle Height="8"/>
          <Button Click="Remove_Click" Background="DarkRed">
            Remove product
          </Button>
        </StackPanel>
      </Border>
    </Grid>

    <Grid Grid.Row="2" Margin="16">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0">
        <Button Click="Exit_Click" Background="#ededed" Foreground="#000">
          Exit / Log out
        </Button>
      </StackPanel>

      <StackPanel Grid.Column="2" Orientation="Horizontal">
        <Button Click="NewProduct_Click">✚ Add new product</Button>
      </StackPanel>
    </Grid>
  </Grid>
</Window>
